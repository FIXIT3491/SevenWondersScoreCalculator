<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".ScoreCalculator">

    <TextView android:text="Scores" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:maxWidth="100dp"
        android:id="@+id/textMain"
        android:textSize="14dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Calculate New Score"
        android:id="@+id/button"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:onClick="startInput" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cities"
        android:id="@+id/cities"
        android:onClick="cities"
        android:layout_below="@+id/Title"
        android:layout_alignLeft="@+id/button"
        android:layout_alignStart="@+id/button" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Leaders"
        android:id="@+id/leaders"
        android:onClick="leaders"
        android:layout_below="@+id/cities"
        android:layout_alignLeft="@+id/button"
        android:layout_alignStart="@+id/button" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Great Projects"
        android:id="@+id/projects"
        android:onClick="projects"
        android:layout_below="@+id/leaders"
        android:layout_alignLeft="@+id/button"
        android:layout_alignStart="@+id/button" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tower of Babel"
        android:id="@+id/babel"
        android:onClick="babel"
        android:layout_below="@+id/projects"
        android:layout_alignLeft="@+id/button"
        android:layout_alignStart="@+id/button" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Expansions this Game"
        android:id="@+id/Title"
        android:layout_below="@+id/button"
        android:layout_alignLeft="@+id/cities"
        android:layout_alignStart="@+id/cities" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reset"
        android:id="@+id/reset"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:onClick="reset" />

</RelativeLayout>
